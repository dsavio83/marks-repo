{
  "version": 2,
  "name": "smart-school-pro-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/backend/api/auth.js"
    },
    {
      "source": "/api/users/(.*)",
      "destination": "/backend/api/users.js"
    },
    {
      "source": "/api/classes/(.*)",
      "destination": "/backend/api/classes.js"
    },
    {
      "source": "/api/subjects/(.*)",
      "destination": "/backend/api/subjects.js"
    },
    {
      "source": "/api/exams/(.*)",
      "destination": "/backend/api/exams.js"
    },
    {
      "source": "/api/marks/(.*)",
      "destination": "/backend/api/marks.js"
    },
    {
      "source": "/api/grades/(.*)",
      "destination": "/backend/api/grades.js"
    },
    {
      "source": "/api/health",
      "destination": "/backend/api/health.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}